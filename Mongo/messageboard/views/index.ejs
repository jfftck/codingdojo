<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Message Board</title>
    </head>
    <body>
        <h1>The Dojo Message Board</h1>
        <form class="" action="/new" method="post">
            <label>Name:<br>
                <input type="text" name="name">
            </label><br>
            <label>Message:<br>
                <textarea name="message" rows="8" cols="40"></textarea>
            </label>
            <input type="submit" value="Post Message">
        </form>
        <% for (var i = 0; i < posts.length; i++) { %>
            <h2>Name: <%= posts[i].name; %></h2>
            <h2>Message: <%= posts[i].message; %></h2>
            <% for (var j = 0; j < posts[i].comments.length; j++) {
                if (posts[i].comments[j]) {%>
                <p>
                    Name: <%= posts[i].comments[j].name; %><br>
                    Comment: <%= posts[i].comments[j].message; %>
                </p>
            <%  }
            } %>
            <form action="/post/<%= posts[i]._id; %>" method="post">
                <label>Name:<br>
                    <input type="text" name="name">
                </label><br>
                <label>Comment:<br>
                    <textarea name="comment" rows="8" cols="40"></textarea>
                </label>
                <input type="submit" value="Post Comment">
            </form>
        <% } %>
    </body>
</html>
